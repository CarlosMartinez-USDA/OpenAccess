/ce:text><ce:keyword id="key19a"><ce:text id="cetext19a">Ethanolic extract of Lychnophora ericoides</ce:text></ce:keyword></ce:keyword><ce:keyword id="key0019"><ce:text id="cetext0020">TG</ce:text><ce:keyword id="key20a"><ce:text id="cetext20a">triglycerides</ce:text></ce:keyword></ce:keyword><ce:keyword id="key0020"><ce:text id="cetext0021">MCH</ce:text><ce:keyword id="key21a"><ce:text id="cetext21a">Mean corpuscular hemoglobin</ce:text></ce:keyword></ce:keyword><ce:keyword id="key0021"><ce:text id="cetext0022">MCHC</ce:text><ce:keyword id="key22a"><ce:text id="cetext22a">Mean corpuscular hemoglobin concentration</ce:text></ce:keyword></ce:keyword><ce:keyword id="key0022"><ce:text id="cetext0023">MCV</ce:text><ce:keyword id="key23a"><ce:text id="cetext23a">Mean corpuscular volume</ce:text></ce:keyword></ce:keyword><ce:keyword id="key0023"><ce:text id="cetext0024">WBC</ce:text><ce:keyword id="key24a"><ce:text id="cetext24a">White blood cells</ce:text></ce:keyword></ce:keyword></ce:keywords></ja:head></ja:article></doc:document>
