            <ce:abstract-sec id="abss0001" view="all">
               <ce:simple-para id="spara009" view="all">
                  <ce:list id="celist0001">
                     <ce:list-item id="celistitem0001">
                        <ce:label>•</ce:label>
                        <ce:para id="para0001" view="all">HPP treatment increased the coffee extraction rate and yield.</ce:para>
                     </ce:list-item>
                     <ce:list-item id="celistitem0002">
                        <ce:label>•</ce:label>
                        <ce:para id="para0002" view="all">The increasing of extraction rate and yield were more significant for whole bean brewing than ground coffee.</ce:para>
                     </ce:list-item>
                     <ce:list-item id="celistitem0003">
                        <ce:label>•</ce:label>
                        <ce:para id="para0003" view="all">HPP-assisted whole bean brew had lower polyphenol and caffeine contents but higher acids content than ground brew.</ce:para>
                     </ce:list-item>
                     <ce:list-item id="celistitem0004">
                        <ce:label>•</ce:label>
                        <ce:para id="para0004" view="all">Whole bean brews exhibited different sensory profiles from ground brew.</ce:para>
                     </ce:list-item>
                  </ce:list>
