                     </ce:list-item>
                     <ce:list-item id="celistitem0003">
                        <ce:label>•</ce:label>
                        <ce:para id="para0003" view="all">Optimal edible formulation improved shelf life of sliced carrot during storage.</ce:para>
                     </ce:list-item>
                  </ce:list>
               </ce:simple-para>
            </ce:abstract-sec>
